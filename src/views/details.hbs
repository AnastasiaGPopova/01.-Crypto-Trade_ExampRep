
    <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{currentCrypto.imageUrl}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{currentCrypto.name}}</h1>
                    <h3 id="payment">Payment method: {{currentCrypto.method}}</h3>
                    <p id="price"><span>Price: ${{currentCrypto.price}}</span></p>
                    <p id="description">{{currentCrypto.description}}</p>
                </div>
                {{#if isLogged}}
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/{{currentCrypto._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/{{currentCrypto._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    <!-- Logged in user who has not yet buy this crypto-->
                    {{#if isBoughtByCurrentUser}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                    <a href="/{{currentCrypto._id}}/buy" class="btn-buy">Buy</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </section>
    </main>
